<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="addPatientPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="500.0" prefWidth="1000.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hospital.java.controllers.FormController">
    <center>

    </center>
    <left>
        <VBox styleClass="border-pane-nav" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="page1" minHeight="40.0" minWidth="160.0" mnemonicParsing="false" onAction="#navPage1" styleClass="nav_btn" text="Details">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            <Button fx:id="page3" layoutX="10.0" layoutY="160.0" minHeight="40.0" minWidth="160.0" mnemonicParsing="false" onAction="#navPage3" styleClass="nav_btn" text="CAG" />
                <Button fx:id="page2" minHeight="40.0" minWidth="160.0" mnemonicParsing="false" onAction="#navPage2" styleClass="nav_btn" text="PCI" />
            <VBox prefHeight="200.0" VBox.vgrow="ALWAYS" />
            <Button fx:id="formSaveBtn" mnemonicParsing="false" onAction="#save" prefHeight="30.0" prefWidth="130.0" styleClass="primary_btn" text="Save">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="formPrintButton" mnemonicParsing="false" onAction="#print" prefHeight="30.0" prefWidth="130.0" styleClass="secondary_btn" text="Print">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="formClearButton" layoutX="20.0" layoutY="675.0" mnemonicParsing="false" onAction="#clearAll" prefHeight="30.0" prefWidth="130.0" styleClass="secondary_btn" text="Clear all">
               <VBox.margin>
                  <Insets bottom="20.0" left="15.0" right="15.0" />
               </VBox.margin>
            </Button>
            </children>
        </VBox>
    </left>
</BorderPane>
