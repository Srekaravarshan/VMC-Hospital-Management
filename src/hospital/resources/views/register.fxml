<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" fx:controller="hospital.java.controllers.RegisterController" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER_LEFT" minWidth="180.0">
         <children>
            <Label text="Please enter the unique roll number" visible="false" />
            <Label text="Email">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <TextField maxWidth="1.7976931348623157E308" fx:id="email_field" />
            <Label text="Please enter the valid email" visible="false" />
            <Label text="Password">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="password_field" maxWidth="1.7976931348623157E308" />
            <Label text="Password cannot be null" visible="false" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#register" text="Register">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="nav_login_btn" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#nav_login" text="Already have an account? Login">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</HBox>
