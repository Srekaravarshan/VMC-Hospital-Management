<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<DialogPane prefHeight="400.0" prefWidth="300.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hospital.java.controllers.AddPatientDialogController">
    <content>
        <GridPane hgap="10" vgap="10">
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                <children>
                    <Label text="Name" />
                    <TextField fx:id="nameField" />
                    <Label fx:id="nameError" />
                </children>
            </VBox>
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                <children>
                    <Label text="Roll Number" />
                    <TextField fx:id="rollNumField" />
                    <Label fx:id="rollNumError" />
                </children>
            </VBox>
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="2">
                <children>
                    <Label text="Address" />
                    <TextField fx:id="addressField" />
                </children>
            </VBox>
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="3">
                <children>
                    <Label text="Father's Name" />
                    <TextField fx:id="fatherNameField" />
                </children>
            </VBox>
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="4">
                <children>
                    <Label text="Mother's Name" />
                    <TextField fx:id="motherNameField" />
                </children>
            </VBox>
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </content>
</DialogPane>
